
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section contact" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Giriş Yap</h2>
                </div>
            </div>
            <div class="col-md-6">

                <!-- Do you need a working HTML contact-form script?

                            Please visit https://templatemo.com/contact page -->

                <form id="contact" action="" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <fieldset>
                                <label class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2 text-light required">Email</label>
                                <input type="email" class="form-control" name="Email" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-6">
                            <fieldset>
                                <label class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2 text-light required">Şifre</label>
                                <input name="Password" rows="6" class="form-control" type="password" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="button">Giriş Yap</button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-md-6">
                <div class="video-overlay header-text">
                    <div class="caption text-light">
                        <h2><em>Düzce</em> Üniversitesi</h2>
                        <h6>Kayıt Ol</h6>
                        <div class="main-button">
                            <div class="scroll-to-section"><a href="/Home/Kayit">Kayıt Ol</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>