
@{
    ViewData["Title"] = "Kayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="section contact" data-section="section5">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Kayıt Ol</h2>
                </div>
            </div>
            <div class="col-md-12">
                <form id="contact" action="" method="post">
                    <div class="row">
                        <div class="col-md-12">
                            <fieldset>
                                <label class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2 text-light required">Kullanıcı Adı</label>
                                <input type="text" class="form-control" name="UserName" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <fieldset>
                                <label class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2 text-light required">Email</label>
                                <input type="email" class="form-control" name="Email" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <fieldset>
                                <label class="col-lg-3 col-form-label form-control-label line-height-9 pt-2 text-2 text-light required">Şifre</label>
                                <input name="Password" rows="6" class="form-control" type="password" required="">
                            </fieldset>
                        </div>
                        <div class="col-md-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="button">Kayıt Ol</button>
                            </fieldset>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>